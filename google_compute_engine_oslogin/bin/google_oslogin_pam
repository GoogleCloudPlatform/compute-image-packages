script_name=$(basename "$0")
config="/etc/pam.d/sshd"

usage() {
    echo "Usage: ${script_name} {activate|deactivate}"
    echo "This script will activate or deactivate the PAM configs for"
    echo "Google Compute Engine OS Login."
    echo "This script must be run as root."
    exit 1
}


pam_comment="# Added by google-oslogin"
pam_login="account    requisite    pam_oslogin_login.so # Added by google-oslogin"
pam_admin="account    optional     pam_oslogin_admin.so # Added by google-oslogin"
pam_homedir="session    optional     pam_mkhomedir.so # Added by google-oslogin"

# User must be root to edit config files.
if [ $(id -u) -ne 0 ]
then
    usage
fi

if [ $# -lt 1 ]
then
    usage
fi

copy_file() {
    cp ${config} ${config}.new
}

overwrite_file() {
    mv ${config}.new ${config}
}

remove_from_config() {
    sed -i '/Added by google-oslogin/d' ${config}.new
}

add_to_config() {
    remove_from_config
    sed -i "/pam_nologin.so/ a${pam_comment}\n${pam_login}\n${pam_admin}" ${config}.new
    sed -i "/pam_selinux.so close/ a${pam_homedir}" ${config}.new
}

case "$1" in

    activate)
        echo "Activating Google Compute Engine OS Login PAM config."
        copy_file
        add_to_config
        overwrite_file
        ;;

    deactivate)
        echo "Deactivating Google Compute Engine OS Login PAM config."
        copy_file
        remove_from_config
        overwrite_file
        ;;

    *)
        usage
        ;;

esac
