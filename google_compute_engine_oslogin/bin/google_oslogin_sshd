script_name=$(basename "$0")
config="/etc/ssh/sshd_config"

usage() {
    echo "Usage: ${script_name} {activate|deactivate} [--nosshdrestart]"
    echo "This script will activate or deactivate AuthorizedKeysCommand for"
    echo "Google Compute Engine OS Login."
    echo "This script must be run as root."
    exit 1
}

sshd_comment="# Added by google-oslogin"
sshd_command="AuthorizedKeysCommand /usr/bin/google_authorized_keys # Added by google-oslogin"
sshd_user="AuthorizedKeysCommandUser root # Added by google-oslogin"


# User must be root to edit config files.
if [ $(id -u) -ne 0 ]
then
    usage
fi

if [ $# -lt 1 ]
then
    usage
fi

copy_file() {
    cp ${config} ${config}.new
}

overwrite_file() {
    mv ${config}.new ${config}
}

remove_from_config() {
    sed -i '/Added by google-oslogin/d' ${config}.new
}

add_to_config() {
    remove_from_config
    sed -i "\$a${sshd_comment}\n${sshd_command}\n${sshd_user}" ${config}.new
}

restart_sshd() {
    echo "Restarting sshd."
    if which service >/dev/null 2>&1
    then
        service sshd restart
    elif which invoke-rc.d >/dev/null 2>&1
    then
        invoke-rc.d sshd restart
    else
        /etc/init.d/sshd restart
    fi
}

case "$1" in

    activate)
        echo "Activating Google Compute Engine OS Login AuthorizedKeysCommand."
        copy_file
        add_to_config
        overwrite_file
        ;;

    deactivate)
        echo "Deactivating Google Compute Engine OS Login AuthorizedKeysCommand."
        copy_file
        remove_from_config
        overwrite_file
        ;;

    *)
        usage
        ;;

esac

if [ $# -lt 2 ] || [ "$2" != "--norestartsshd" ]
then
    restart_sshd
fi
