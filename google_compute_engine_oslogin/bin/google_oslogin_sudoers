script_name=$(basename "$0")

usage() {
    echo "Usage: ${script_name} {activate|deactivate}"
    echo "This script will activate or deactivate the sudoers configuration"
    echo "for Google Compute Engine OS Login."
    echo "This script must be run as root."
    exit 1
}

# User must be root to edit config files.
if [ $(id -u) -ne 0 ]
then
    usage
fi

if [ $# -lt 1 ]
then
    usage
fi

case "$1" in

    activate)
        echo "Activating Google Compute Engine OS Login sudoers."
        mkdir -p /etc/google-sudoers.d
        echo "#includedir /etc/google-sudoers.d" > /etc/sudoers.d/google-oslogin
        ;;

    deactivate)
        echo "Deactivating Google Compute Engine OS Login sudoers."
        rm -f /etc/sudoers.d/google-oslogin
        rm -rf /etc/google-sudoers.d
        ;;

    *)
        usage
        ;;

esac
